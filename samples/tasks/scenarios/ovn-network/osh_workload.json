{% set farm_nodes = farm_nodes or 1 %}
{% set networks = networks or 1 %}
{% set ports_per_network = ports_per_network or 1 %}
{% set internal_ports_cleanup = internal_ports_cleanup or 0 %}
{
    "version": 2,
    "title": "Switch per node workload",
    "subtasks": [
        {
           "title": "cleanup logical switch",
           "workloads": [{
               "name": "OvnNorthbound.cleanup_routed_lswitches",
               "runner": {"type": "serial","times": 1},
               "context": {
                  "sandbox": {"tag": "ToR1"},
                  "ovn_multihost" : {"controller": "ovn-controller-node"},
                  "ovn_nb": {}
               }
           }]
        },
        {% for i in range(0, farm_nodes) %}
        {
            "title": "Delete sandbox on farm {{i}}",
            "workloads": [{
                "name": "OvnSandbox.delete_sandbox",
                "args": {
                    "sandbox_delete_args": {
                        "farm": "ovn-farm-node-{{i}}",
                        "graceful": false,
                        "tag": "ToR1"
                    }
                },
                "runner": {"type": "serial", "times": 1},
                "context": {
                    "ovn_multihost" : {"controller": "ovn-controller-node"}
                }
            }]
        },
        {% endfor %}
        {% for i in range(0, farm_nodes) %}
        {
            "title": "Create sandbox on farm {{i}}",
            "workloads": [{
                "name": "OvnSandbox.create_sandbox",
                "args": {
                    "sandbox_create_args": {
                        "farm": "ovn-farm-node-{{i}}",
                        "amount": 1,
                        "batch" : 1,
                        "start_cidr": "5.0.{{i // 255 }}.{{i % 255}}/8",
                        "net_dev": "eth1",
                        "tag": "ToR1"
                    }
                },
                "runner": {"type": "serial", "times": 1},
                "context": {
                    "ovn_multihost" : {"controller": "ovn-controller-node"}
                }
            }]
        },
        {% endfor %}
        {
            "title": "Create switch-per-node scenario (setup workload)",
            "run_in_parallel": true,
            "workloads": [
                {
                    "name": "OvnNorthbound.create_routed_network",
                    "args": {
                        "lswitch_create_args": {
                            "amount" : {{networks}},
                            "start_cidr": "1.0.0.0/16"
                        },
                        "lport_create_args": {
                            "batch" : 1,
                            "port_security" : true
                        },
                        "port_bind_args": {
                            "internal" : true
                        },
                        "networks_per_router": {{networks}}
                    },
                    "runner": {
                        "type": "serial",
                        "times": 1
                    },
                    "context": {
                        "ovn_multihost" : {
                            "controller": "ovn-controller-node"
                        },
                        "sandbox": {"tag": "ToR1"},
                        "datapath": {
                            "router_create_args": {
                                "amount": 1
                            }
                        },
                        "ovn-nbctld" : {
                            "daemon_mode": True
                        }
                    }
                }
            ]
        },
        {
            "title": "Create switch-per-node scenario (add pods workload)",
            "run_in_parallel": true,
            "workloads": [
                {
                    "name": "OvnNorthbound.create_routed_lport",
                    "args": {
                        "lport_create_args": {
                            "batch" : 1,
                            "port_security" : true,
                            "ip_offset" : 2
                        },
                        "port_bind_args": {
                            "internal" : true
                        },
                        "create_acls": true
                    },
                    "runner": {
                        "type": "serial",
                        "times": {{ports_per_network}}
                    },
                    "context": {
                       "sandbox": {"tag": "ToR1"},
                       "ovn_multihost" : {
                            "controller": "ovn-controller-node"
                       },
                       "ovn_nb": {},
                       "ovn-nbctld" : {
                            "daemon_mode": True
                       }
                    }
                }
            ]
        }
    ]
}
